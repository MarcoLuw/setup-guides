# OpenAI API Key for translation service (alternative)
OPENAI_API_KEY=your_openai_api_key_here

# Client Configuration
CLIENT_PORT=3000
VITE_BACKEND_URL=http://localhost:8080

# Kafka UI Configuration
KAFKA_UI_PORT=8090
