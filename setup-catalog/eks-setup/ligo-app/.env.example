# Application Environment Variables

# PostgreSQL Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=ligochat
DB_USER=ligouser
DB_PASSWORD=ligopass

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
