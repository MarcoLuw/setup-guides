# Spring Profile (choose one: plaintext, sasl-scram, iam)
SPRING_PROFILES_ACTIVE=iam

# Kafka Bootstrap Servers
# Local development
# KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# MSK SASL/SCRAM (port 9096)
# KAFKA_BOOTSTRAP_SERVERS=b-1.mycluster.xxx.kafka.us-east-1.amazonaws.com:9096,b-2.mycluster.xxx.kafka.us-east-1.amazonaws.com:9096

# MSK IAM (port 9098)
KAFKA_BOOTSTRAP_SERVERS=

# Kafka Topic
KAFKA_TOPIC_NAME=

# SASL/SCRAM Credentials (only for sasl-scram profile)
# MSK_USERNAME=your-username
# MSK_PASSWORD=your-password

# AWS Configuration (only for iam profile)
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Server Configuration
SERVER_PORT=